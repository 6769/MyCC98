<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="personal_board_list_footer_button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/simple_button_selector</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
 
 
    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>
 
    <style name="listview">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@drawable/abs__list_selector_holo_dark</item>
     </style>

    <style name="button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/simple_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/list_divider</item>
    </style>

    <style name="board_name">
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:textColor">@color/board_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="post_title_style">
        <item name="android:textColor">@color/post_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="ButtonBarButton">
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
    </style>
 </resources>