<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/board_info_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/light_transparent"
        android:orientation="vertical" >

        <!-- 回复标题 -->

        <EditText
            android:id="@+id/reply_title_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="主题"
            android:textColor="#444444"
            android:textSize="15sp" />

        <!-- 回帖心情 -->

        <include layout="@layout/face_choose" />

        <!-- 回复内容 -->

        <EditText
            android:id="@+id/reply_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:hint="内容"
            android:textColor="#444444"
            android:textSize="15sp" />

        <!-- 快速添加表情 -->

        <include layout="@layout/quick_emot_insert" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/insert_expression_button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/insert_expression" />

        <!-- 选择附件 -->

        <TextView
            android:id="@+id/upload_image_button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/upload_image" />

        <TextView
            android:id="@+id/preview_reply"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/preview_reply" />

        <TextView
            android:id="@+id/chars_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/simple_button_selector"
            android:gravity="right"
            android:text="@string/reply_you_can_type"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>