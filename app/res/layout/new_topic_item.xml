<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f9f9"
    android:orientation="vertical"
    android:padding="4dp" >

    <!-- 帖子标题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/new_topic_post_type"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/face7" />

        <TextView
            android:id="@+id/new_topic_name"
            style="@style/post_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【MSTC】微软技术俱乐部2011年秋季纳新面试名单及安排公布" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <!-- 作者 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="作者："
            android:textColor="#a0a0a0"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/new_topic_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="MSTC"
            android:textColor="#777"
            android:textSize="10sp" />
        <!-- 时间 -->

        <TextView
            android:id="@+id/new_topic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="16小时之前"
            android:textColor="#a0a0a0"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>