<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/board_info_background"
    android:orientation="vertical" >

    <include layout="@layout/post_search_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/search_bar_bg"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/search_area_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" 
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/sear_icon_small"
                android:layout_marginLeft="5dp" />
            
            <EditText
                android:id="@+id/et_postsearch_key"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1.0"
                android:background="@null"
                 android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:hint="请输入关键词" 
                android:textSize="13sp"/>
            <Button 
                android:id="@+id/post_search_clear_input"
                android:layout_height="18dp"
                android:layout_width="18dp"
                android:background="@drawable/search_clear_input_icon"
                android:layout_marginRight="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp" >

        <RadioGroup
            android:id="@+id/rg_postsearch_stype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingRight="15dp" >

            <RadioButton
                android:id="@+id/rb_postsearch_by_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="以主题搜索"
                android:textColor="#000"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_postsearch_by_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="以作者搜索"
                android:textColor="#000"
                android:textSize="10sp" />
        </RadioGroup>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_postsearch"
        style="@style/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/post_list_background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_postsearch_prev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/simple_button_selector"
            android:gravity="center"
            android:text="上一页"
            android:textColor="#fff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_postsearch_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/simple_button_selector"
            android:gravity="center"
            android:text="下一页"
            android:textColor="#fff"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>