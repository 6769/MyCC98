<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.MyCC98" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.MyCC98.ActionBar</item>
        <item name="@android:windowAnimationStyle">@style/ActivityAnimStyle</item>
     </style>
    
    <style name="Theme.MyCC98.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
     </style>

    <style name="Theme.MyCC98.OverLay" parent="Theme.Sherlock">
        <item name="android:actionBarStyle">@style/Theme.MyCC98.OverLay.ActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="@android:windowAnimationStyle">@style/ActivityAnimStyle</item>
        
     </style>

    <style name="Theme.MyCC98.OverLay.ActionBar" parent="Widget.Sherlock.ActionBar">
         <item name="android:titleTextStyle">@style/MyCC98.OverLay.TextAppearance.ActionBar.Title</item>
         <item name="android:background">@drawable/actionbar_background</item>
         <item name="android:backgroundSplit">#ee000000</item>
         <item name="android:subtitleTextStyle">@style/MyCC98.OverLay.TextAppearance.ActionBar.Subtitle</item>
         
         
    </style>

    <style name="MyCC98.OverLay.TextAppearance.ActionBar.Subtitle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#ddd</item>
    </style>
    
    <style name="MyCC98.OverLay.TextAppearance.ActionBar.Title" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#eee</item>
    </style>
    
      <style name="ActivityAnimStyle">
        <item name="@android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="@android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="@android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="@android:activityCloseExitAnimation">@anim/activity_close_exit</item>
  </style>
    
</resources>