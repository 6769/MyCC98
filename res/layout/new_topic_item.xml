<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_topic_clickable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:orientation="vertical"
    android:padding="4dp" >

    <!-- 帖子标题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"  >

        <ImageView
            android:id="@+id/new_topic_post_type"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/face7" />

        <TextView
            android:id="@+id/new_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【MSTC】微软技术俱乐部2011年秋季纳新面试名单及安排公布"
            android:textColor="@color/post_list_title"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" >

        <!-- 作者 -->

        <TextView
            android:id="@+id/new_topic_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="By: MSTC"
            android:textColor="@color/post_info"
            android:textSize="11sp" />
        <!-- 时间 -->

        <TextView
            android:id="@+id/new_topic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="16 小时 0 分 之前"
            android:textColor="@color/post_info"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>