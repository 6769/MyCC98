<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="@drawable/title_bg_bar"
    android:gravity="center_vertical" >

    <!-- 用户头像 -->

    <ImageView
        android:id="@+id/post_content_header_userimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/avatar_bg"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/bug" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/post_content_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:singleLine="true"
            android:text="今天天气很不错的样子"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/post_content_current_page_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页    共"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/post_content_total_page_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="页"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/post_content_reply_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/search_button_selector"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="回复"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>